@model OnlineBankingForManagers.WebUI.Models.LoginViewModel

@{
     ViewBag.Title = "Manager: Log In";
     Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>Please enter your credenlials:</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table>
        <tr>

            <td class="label-input-field">@Html.LabelFor(m => m.UserName):</td>
            <td>@Html.TextBoxFor(m => m.UserName, new {  @title = "Your username." })</td>
            <td>@Html.ValidationMessageFor(m => m.UserName)</td>
        </tr>

        <tr>
            <td class="label-input-field">@Html.LabelFor(m => m.Password):</td>
            <td>@Html.PasswordFor(m => m.Password, new {  @title = "Your password." })</td>
            <td>@Html.ValidationMessageFor(m => m.Password)</td>
        </tr>
        <tr>
            <td></td>
            <td class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe, new { @title = "For remember user." })
                - @Html.LabelFor(m => m.RememberMe)
            </td>
            <td>@Html.ValidationMessageFor(m => m.RememberMe)</td>
        </tr>
    </table>
    <p><input type="submit" value="Submit" title="Press for submit" /> </p>

    @Html.ActionLink("Register new account", "Register")
}




